{{ define "subcontent" }}
<article>
  <div class="post-header">
    <h2><a href="/blog?post={{$.Uid}}">{{$.Title}}</a></h2>
    <time datetime="{{.PostDate | formatDate }}">{{.PostDate | formatDate }}</time>
  </div>
  <p>{{$.Body}}</p>
</article>
{{ end }}

{{ define "content" }}
    {{template "subcontent" .}}
{{ end }}